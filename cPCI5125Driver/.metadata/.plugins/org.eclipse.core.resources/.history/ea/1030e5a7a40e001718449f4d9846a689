#ifndef CPCI5125_H_
#define CPCI5125_H_

typedef struct ioctl_data
{
    unsigned int data;
    unsigned int offset;
} TY_IOCTL_DATA;

#define ReadBAR2	 0xc
#define WRITEBAR2 	 0xd

/*---------------------------------
  Function Declarations
-----------------------------------*/
/*******************************************************************************
* Function Name  : hiCPCI2500Open
* Description    : open device call first
* Input          : pHDev: device handle
* Input          : cardNum: Card Index
* Output         : None
* Return         : Error Code
*******************************************************************************/
HR_DWORD hiCPCI2500Open (HR_DEVICE_HANDLE *pHDev, HR_UINT32 cardNum);

/*******************************************************************************
* Function Name  : hiCPCI2500Close
* Description    : close device
* Input          : pHDev: device handle
* Output         : None
* Return         : Error Code
*******************************************************************************/
HR_DWORD hiCPCI2500Close (HR_DEVICE_HANDLE pHDev);

HR_DWORD HRWrite5125f(HR_DEVICE_HANDLE hDev,HR_UINT32 regNum,float fData);

HR_DWORD HRWrite5125i(HR_DEVICE_HANDLE hDev,HR_UINT32 regNum,HR_UINT32 iData);

HR_DWORD HRRead5125f(HR_DEVICE_HANDLE hDev,HR_UINT32 regNum,float *fData);

HR_DWORD HRRead5125i(HR_DEVICE_HANDLE hDev,HR_UINT32 regNum,HR_UINT32 *iData);

HR_DWORD HRResolverInit(HR_DEVICE_HANDLE hDev,HR_FLOAT ratio,HR_UINT32 poleNum,HR_UINT32 excEn,HR_FLOAT voltage,HR_FLOAT freq);

HR_DWORD HRResolverStop(HR_DEVICE_HANDLE hDev);
#endif /* CPCI5125_H_ */
