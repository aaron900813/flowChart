.SUFFIXES:.cpp .o

CC=g++

SRCS=main.cpp
OBJS=$(SRCS:.cpp=.o)
EXEC=cPCI5125
SOLIB=/home/hirain/V1.0.0/cPCI5125Driver/Lib 
SOLIBNAME=-lcPCI5125
all: $(OBJS)
	@echo "-------------------start------------------------"
	$(CC) -o $(EXEC) $(OBJS)  $(SOLIBNAME) -L$(SOLIB)
	@echo "--------------------OK--------------------------"

.cpp.o: 
	$(CC) -Wall -g -o $@ -c $< $

clean:
	rm -rf $(EXEC) $(OBJS)